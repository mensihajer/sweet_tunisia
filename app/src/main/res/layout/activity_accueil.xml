<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE03A9F4"
    android:orientation="vertical">

    <Button
        android:id="@+id/inscrire_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="550px"
        android:layout_marginTop="20px"
        android:background="#A12196F3"
        android:text="@string/inscrire"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/connecter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="300px"
        android:layout_marginTop="-100px"
        android:background="#A12196F3"
        android:text="@string/connecter"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="354dp"
        android:layout_height="393dp"
        app:srcCompat="@drawable/telechargement" />

    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenue"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/next"
        android:layout_width="47dp"
        android:layout_height="74dp"

        app:srcCompat="@android:drawable/ic_media_ff" />


</LinearLayout>