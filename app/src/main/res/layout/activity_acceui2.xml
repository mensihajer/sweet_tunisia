<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE03A9F4"
    android:orientation="vertical">

    <Button
        android:id="@+id/inscrire_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="700px"
        android:layout_marginTop="50px"
        android:layout_marginRight="50px"
        android:background="#A12196F3"
        android:text="@string/inscrire"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/connecter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400px"
        android:layout_marginTop="-120px"
        android:background="#A12196F3"
        android:text="@string/connecter"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="1250px"
        android:layout_marginRight="30px"
        android:layout_marginBottom="10px"
        android:gravity="center"
        android:text="@string/decouvrir"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-55px"
        android:layout_marginTop="-1300px"
        android:layout_marginRight="-5px"
        android:layout_marginBottom="680px"
        app:srcCompat="@drawable/image" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="57dp"
        android:layout_height="64dp"
        android:layout_marginLeft="900px"
        android:layout_marginTop="-1250px"
        android:layout_marginBottom="130px"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageView
        android:id="@+id/previous"
        android:layout_width="57dp"
        android:layout_height="64dp"
        android:layout_marginLeft="-10px"
        android:layout_marginTop="-280px"
        android:layout_marginRight="380px"
        app:srcCompat="@android:drawable/ic_media_rew" />


</LinearLayout>